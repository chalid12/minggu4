<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/styles/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />
    <title>Blog</title>
  </head>
  <body class="bg-secondary-subtle">
    <nav
      class="navbar navbar-expand-lg bg-body-primary text-center"
      style="background-color: #e3f2fd;"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <h1><i class="bi bi-house-heart-fill"></i></h1>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/add-projek">Add projek</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact"><button class="btn btn-dark">Contact Me</button></a>
        </div>
      </div>
    </nav>

    <!-- Tambahkan blok untuk pesan flash di sini -->
    {{#if messages.success}}
    <div class="alert alert-success" role="alert">
      {{messages.success}}
    </div>
    {{/if}}
    {{#if messages.error}}
    <div class="alert alert-danger" role="alert">
      {{messages.error}}
    </div>
    {{/if}}

    <div class="container shadow rounded mt-3 pt-4 pb-4 ps-4 pe-4 bg-light">
      <div class="p-1">
        <h2 class="mb-3">Data Pengguna Terdaftar</h2>
        <form action="/update-user" method="post">
          <div class="mb-3">
            <label for="displayUsername" class="form-label">Username:</label>
            <input type="text" class="form-control" id="displayUsername" name="username" value="{{username}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="displayName" class="form-label">Nama:</label>
            <input type="text" class="form-control" id="displayName" name="name" value="{{name}}" disabled data-editable="false"/>
          </div>
          <div class="mb-3">
            <label for="displayEmail" class="form-label">Email:</label>
            <input type="email" class="form-control" id="displayEmail" name="email" value="{{email}}" disabled data-editable="false"/>
          </div>
          <button type="button" class="btn btn-primary" onclick="toggleEdit()">Edit Data</button>
          <button type="submit" class="btn btn-success" disabled>Simpan Perubahan</button>
        </form>
        <button type="button" class="btn btn-secondary">Update Password</button>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script src="/assests/js/blog.js"></script>
    <script
      src="https://kit.fontawesome.com/42aaf70010.js"
      crossorigin="anonymous"
    ></script>
    <script>
      function toggleEdit() {
        var inputs = document.querySelectorAll('#displayName, #displayEmail');
        inputs.forEach(input => {
          var isEditable = input.getAttribute('data-editable') === 'true';
          input.disabled = isEditable;
          input.setAttribute('data-editable', !isEditable);
        });
        document.querySelector('button[type="submit"]').disabled = inputs[0].disabled;
      }
    </script>
  </body>
</html>